{
    "description": "This interface can be used for controllable batteries offering a api access to control power in watt of the battery.",
    "extends": ["heatpump"],
    "states": [
        {
            "name": "enableForcePower",
            "type": "bool",
            "defaultValue": false,
            "writable": true
        },
        {
            "name": "enableForcePowerState",
            "type": "bool",
            "defaultValue": false
        },
        {
            "name": "forcePower",
            "type": "double",
            "unit": "Watt",
            "defaultValue": 0.0,
            "writable": true,
            "cached": true
        },
        {
            "name": "forcePowerTimeout",
            "type": "int",
            "unit": "Seconds",
            "defaultValue": 500,
            "writable": true,
            "cached": true,
            "optional": true
        },
        {
            "name": "forcePowerTimeoutCountdown",
            "type": "int",
            "unit": "Seconds",
            "defaultValue": 500,
            "cached": true,
            "optional": true
        }
    ]
}
